---
import { bounce } from "@utils/animation.utils";
import { twMerge } from "tailwind-merge";

interface Props {
  text: string | Element;
  href?: string;
  transitionName?: string;
  class?: string;
}

const { text, href, transitionName, class: klass } = Astro.props;
---

<div
  transition:name={transitionName}
  transition:animate={bounce}
  class={twMerge(
    `py-7 flex items-center text-sm text-gray-800 before:flex-[1_1_0%]
     before:border-t before:border-gray-200 before:me-6 after:flex-[1_1_0%] 
     after:border-t after:border-gray-200 after:ms-6 dark:text-white 
     dark:before:border-gray-600 dark:after:border-gray-600`,
    klass
  )}
>
  {
    href ? (
      <a
        class="text-blue-600 hover:text-blue-500 opacity-90 text-lg"
        href={href}
      >
        {text}
      </a>
    ) : (
      <span class="text-blue-600 opacity-90">{text}</span>
    )
  }
</div>
