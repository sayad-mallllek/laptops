---
import { twMerge } from "tailwind-merge";

interface Props {
  paths: {
    name: string;
    href: string;
  }[];
  class?: string;
}

const { paths, class: klass } = Astro.props;
---

<ol
  class={twMerge("flex items-center whitespace-nowrap", klass)}
  aria-label="Breadcrumb"
>
  {
    paths.map((path, i, self) => (
      <li
        class={twMerge(
          "inline-flex items-center",
          i === self.length - 1
            ? "text-sm font-semibold text-gray-800 truncate dark:text-gray-200"
            : undefined
        )}
      >
        <a
          class="flex items-center text-sm text-gray-500 hover:text-blue-600 focus:outline-none focus:text-blue-600 dark:focus:text-blue-500"
          href={path.href}
        >
          {path.name}
        </a>
        {i !== self.length - 1 && (
          <svg
            class="flex-shrink-0 mx-2 overflow-visible h-4 w-4 text-gray-400 dark:text-neutral-600 dark:text-neutral-600"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="m9 18 6-6-6-6" />
          </svg>
        )}
      </li>
    ))
  }
</ol>
