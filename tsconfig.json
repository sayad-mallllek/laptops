{
  "extends": "astro/tsconfigs/strict",
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@api/*": ["src/api/*"],
    }
  }
}
